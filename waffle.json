{
  "compilerType": "solcjs",
  "compilerVersion": "0.8.0",
  "sourceDirectory": "./src",
  "outputDirectory": "./build",
  "flattenOutputDirectory": "./flatten",
  "compilerOptions": {
    "outputSelection": {
      "*": {
        "*": [
          "evm.bytecode.object",
          "evm.deployedBytecode.object",
          "abi",
          "evm.bytecode.sourceMap",
          "evm.deployedBytecode.sourceMap",
          "metadata"
        ],
        "": ["ast"]
      }
    },
    "evmVersion": "istanbul",
    "optimizer": {
      "enabled": true,
      "runs": 999999
    }
  }
}